import java.io.BufferedReader;
import java.io.DataInputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.ObjectOutputStream;
import java.io.Serializable;
import java.nio.file.Files;

class Employee implements Serializable
{
	public int id;
	public String name;
	public double salary;
  
	public Employee(String aName, int aid, double asalary)
	{
		name = aName;
		id = aid;
		salary = asalary;
	}
	
	public String getName()
	{
		return name;
	}
	
	public int getId()
	{
		return id;
	}
	
	public double getSalary()
	{
		return salary;
	}
	
	
}

public class NumberOfEntries 
{

	public static void main(String[] args) throws FileNotFoundException, IOException 
	{
		Employee p1 = new Employee("Sam",009,120000);
		Employee p2 = new Employee("Surya",010,170000);
		Employee p3 = new Employee("Ashwin",011,65000);
		Employee p4 = new Employee("Aravind",012,55000);
		Employee p5 = new Employee("Sundar",013,35000);
    
		File myfile = new File("D:\\data\\testcase\\file1.txt");
		ObjectOutputStream out = new ObjectOutputStream(new FileOutputStream("D:\\data\\testcase\\file1.txt"));

		out.writeObject(p1);
		out.writeObject(p2);
		out.writeObject(p3);
		out.writeObject(p4);
		out.writeObject(p5);
		
		try
		{
			FileInputStream fstream = new FileInputStream("D:\\data\\testcase\\file1.txt");
			DataInputStream in = new DataInputStream(fstream);
			BufferedReader br = new BufferedReader(new InputStreamReader(in));
			String str;
			
			while((str = br.readLine()) != null)
			{
					System.out.println(str);
					
			}
			in.close();
			
		}
		
		catch(Exception E)
		{
			System.out.println("Error!");
		}
		
		long count = entries();
		System.out.println("value:" + count);
	}
	
	public static long entries()
	{
		long entries = 0;
		try 
		{
			entries = Files.lines(new File("D:\\data\\testcase\\file1.txt").toPath()).count();
		}
		catch (IOException e)
		{
		
		}
		return entries;
	}

}
